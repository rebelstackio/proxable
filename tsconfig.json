{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": "./",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"typeRoots": [ "node", "./node_modules/@types", "./src/types" ],
	},
	"include": ["./src/**/*","test/**/*.ts"],
	"exclude": ["node_modules"]
}
